{
  "name": "pohlang-hub",
  "displayName": "PohLang Hub",
  "description": "Complete PohLang v0.5.2 development environment with Rust runtime, 20 phrasal expressions, syntax highlighting, IntelliSense, and code execution",
  "version": "0.1.1",
  "publisher": "pohlang",
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "pohlang",
    "poh",
    "interpreter",
    "programming language",
    "rust",
    "phrasal expressions",
    "natural language",
    "beginner-friendly"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:pohlang",
    "onCommand:pohlang-hub.runFile",
    "onCommand:pohlang-hub.createProject",
    "onCommand:pohlang-hub.updateLanguage",
    "onCommand:pohlang-hub.runEnvironmentExample",
    "onCommand:pohlang-hub.showSDKVersions"
  ],
  "contributes": {
    "languages": [
      {
        "id": "pohlang",
        "aliases": [
          "PohLang",
          "poh"
        ],
        "extensions": [
          ".poh"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pohlang",
        "scopeName": "source.pohlang",
        "path": "./syntaxes/pohlang.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "pohlang",
        "path": "./snippets/pohlang.json"
      }
    ],
    "commands": [
      {
        "command": "pohlang-hub.runFile",
        "title": "PL-Hub: Run File"
      },
      {
        "command": "pohlang-hub.createProject",
        "title": "PL-Hub: Create Project"
      },
      {
        "command": "pohlang-hub.updateLanguage",
        "title": "PL-Hub: Update Language"
      },
      {
        "command": "pohlang-hub.runEnvironmentExample",
        "title": "PL-Hub: Run Environment Example"
      },
      {
        "command": "pohlang-hub.showSDKVersions",
        "title": "PL-Hub: Show SDK Versions"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceExtname == .poh",
          "command": "pohlang-hub.runFile",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "pohlang-hub.runFile",
          "when": "resourceExtname == .poh"
        }
      ]
    },
    "keybindings": [
      {
        "command": "pohlang-hub.runFile",
        "key": "ctrl+f5",
        "when": "resourceExtname == .poh"
      }
    ],
    "configuration": {
      "title": "PohLang Hub",
      "properties": {
        "pohlangHub.interpreterRepo": {
          "type": "string",
          "default": "AlhaqGH/PohLang",
          "markdownDescription": "GitHub repo for PohLang interpreter releases (legacy key). Prefer `pohlangHub.pohlangRepo`."
        },
        "pohlangHub.sdkRepo": {
          "type": "string",
          "default": "AlhaqGH/PLHub",
          "markdownDescription": "GitHub repo for PL-Hub SDK releases (legacy key). Prefer `pohlangHub.plhubRepo`."
        },
        "pohlangHub.autoUpdateSDKs": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically fetch latest interpreter/SDK before runs (legacy key). Prefer `pohlangHub.autoUpdate`."
        },
        "pohlangHub.pohlangRepo": {
          "type": "string",
          "default": "AlhaqGH/PohLang",
          "description": "GitHub repo for PohLang interpreter releases (owner/repo)"
        },
        "pohlangHub.plhubRepo": {
          "type": "string",
          "default": "AlhaqGH/PLHub",
          "description": "GitHub repo for PL-Hub SDK releases (owner/repo)"
        },
        "pohlangHub.autoUpdate": {
          "type": "boolean",
          "default": true,
          "description": "Automatically fetch latest interpreter/SDK before runs"
        },
        "pohlangHub.updateIntervalDays": {
          "type": "number",
          "default": 7,
          "minimum": 0,
          "description": "How often (in days) to check for SDK updates when autoUpdate is enabled. 0 = check every run."
        },
        "pohlangHub.sdkTagOverride": {
          "type": "string",
          "default": "",
          "description": "Optional Git tag to pin both SDK downloads to (e.g. sdk-v0.5.0). Leave empty for latest."
        },
        "pohlangHub.assetPattern": {
          "type": "string",
          "default": "",
          "markdownDescription": "Regex to filter release assets to download (applied in addition to platform defaults)."
        },
        "pohlangHub.githubToken": {
          "type": "string",
          "default": "",
          "markdownDescription": "Optional GitHub token for higher rate limits. Store as VS Code Secret if needed."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "extract-zip": "^2.0.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pohlang/pohlang-hub.git"
  },
  "bugs": {
    "url": "https://github.com/pohlang/pohlang-hub/issues"
  },
  "homepage": "https://github.com/pohlang/pohlang-hub#readme"
}